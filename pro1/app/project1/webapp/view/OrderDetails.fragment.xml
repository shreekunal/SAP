<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout.form">
    <Dialog id="orderDetailsDialog" title="Order Details" stretchOnPhone="true">
        <content>
            <layout:SimpleForm id="orderDetailsForm" maxContainerCols="2">
                <Label text="Order No" />
                <Text text="{orderNo}" />

                <Label text="Date" />
                <DatePicker value="{date}" displayFormat="yyyy-MM-dd"
                    editable="{orderDetailsModel>/isEditable}" />

                <Label text="Customer" />
                <Input value="{customerName}" editable="{orderDetailsModel>/isEditable}" />

                <Label text="Status" />
                <Select selectedKey="{status}" editable="{orderDetailsModel>/isEditable}">
                    <items>
                        <core:Item key="Draft" text="Draft" />
                        <core:Item key="Submitted" text="Submitted" />
                    </items>
                </Select>

                <Label text="Items" />
                <Table id="detailItemsTable" items="{path: 'Items'}">
                    <columns>
                        <Column>
                            <Text text="Price" />
                        </Column>
                        <Column>
                            <Text text="Unit" />
                        </Column>
                        <Column>
                            <Text text="Quantity" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{price}" />
                                <Text text="{unit}" />
                                <Text text="{quantity}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <Label text="Attachments" />
                <Table id="detailAttachmentsTable" items="{path: 'Attachments'}">
                    <columns>
                        <Column>
                            <Text text="File Name" />
                        </Column>
                        <Column>
                            <Text text="MIME Type" />
                        </Column>
                        <Column>
                            <Text text="Actions" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{fileName}" />
                                <Text text="{mimeType}" />
                                <Button text="Preview" press="onPreviewAttachment" type="Emphasized" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </layout:SimpleForm>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button id="editBtn" text="Edit" press="onEditOrderDetails" type="Emphasized" />
                <Button id="saveBtn" text="Save" press="onSaveOrderDetails" type="Emphasized"
                    visible="false" />
                <Button id="cancelBtn" text="Cancel" press="onCancelEditOrderDetails"
                    visible="false" />
                <Button text="Close" press="onCloseOrderDetails" />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>