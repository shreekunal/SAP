<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout.form">
    <Dialog id="orderDetailsDialog" title="Order Details" stretchOnPhone="true">
        <content>
            <layout:SimpleForm editable="false" maxContainerCols="2">
                <Label text="Order No" />
                <Text text="{orderNo}" />

                <Label text="Date" />
                <Text text="{date}" />

                <Label text="Customer" />
                <Text text="{customerName}" />

                <Label text="Status" />
                <Text text="{status}" />

                <Label text="Items" />
                <Table id="detailItemsTable" items="{path: 'Items'}">
                    <columns>
                        <Column>
                            <Text text="Price" />
                        </Column>
                        <Column>
                            <Text text="Unit" />
                        </Column>
                        <Column>
                            <Text text="Quantity" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{price}" />
                                <Text text="{unit}" />
                                <Text text="{quantity}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <Label text="Attachments" />
                <Table id="detailAttachmentsTable" items="{path: 'Attachments'}">
                    <columns>
                        <Column>
                            <Text text="File Name" />
                        </Column>
                        <Column>
                            <Text text="MIME Type" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{fileName}" />
                                <Text text="{mimeType}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </layout:SimpleForm>
        </content>
        <endButton>
            <Button text="Close" press="onCloseOrderDetails" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>