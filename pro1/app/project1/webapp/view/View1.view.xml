<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
        <content>
            <!-- <HBox justifyContent="SpaceBetween" alignItems="Center"> -->
            <!-- <Button id="btnAddOrder" text="Add Order" press="onOpenAddOrder" /> -->
            <!-- </HBox> -->

            <Table id="ordersTable" inset="false" growing="true" items="{path: '/SalesOrders'}"
                mode="MultiSelect">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Sales Orders" />
                        <ToolbarSpacer />
                        <SearchField id="searchField" width="80%" placeholder="Search orders..."
                            search="onSearch" liveChange="onSearch" />
                        <ToolbarSpacer />
                        <Button text="Add Order" press="onOpenAddOrder"></Button>
                        <Button text="Delete Selected" press="onDeleteSelectedOrders" type="Reject"></Button>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Order No" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Customer" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active" press="onShowOrderDetails">
                        <cells>
                            <Text text="{orderNo}" />
                            <Text text="{date}" />
                            <Text text="{customerName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>