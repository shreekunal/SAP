{
  "name": "pro1",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1.4.1",
    "@sap/cds": "^9.7.0",
    "@sap/cds-compiler": "^4.5.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/postgres": "^1.4.1",
    "@sap/cds-dk": "^9.6.1",
    "@sap/ux-specification": "^1.120.1",
    "@ui5/cli": "3.8.0"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "start": "cds-serve",
    "local:cds:watch": "node node_modules/@sap/cds/bin/cds watch",
    "watch-fiori": "cds watch --open fiori/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "postgres",
        "pool": {
          "acquireTimeoutMillis": 5000,
          "acquire": 1000000,
          "idle": 200000,
          "min": 0,
          "max": 100,
          "fifo": true
        },
        "impl": "@cap-js/postgres",
        "credentials": {
          "host": "localhost",
          "port": 5432,
          "database": "projectmanagementdb",
          "user": "postgres",
          "password": "postgres"
        }
      },
      "[development]": {
        "kind": "postgres",
        "impl": "@cap-js/postgres",
        "credentials": {
          "host": "localhost",
          "port": 5432,
          "database": "projectmanagementdb",
          "user": "postgres",
          "password": "postgres"
        }
      }
    },
    "features": {
      "cds_tx_inheritance": false,
      "cds_tx_protection": false
    }
  },
  "sapux": [
    "app/fiori"
  ]
}
